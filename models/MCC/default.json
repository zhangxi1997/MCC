{
  "dataset_reader": {
    "type": "vswag",
    "embs":"bert_da"
  },
  "model": {
    "type": "LSTMBatchNormBUAGlobalNoFinalImageFull",
    "option_encoder": {
      "type": "lstm",
      "input_size": 1792, //1280,
      "hidden_size": 512, //256
      "num_layers": 1,
      "bidirectional": true
    },

    "initializer": [
    [".*final_mlp.*weight", {"type": "xavier_uniform"}],
    [".*final_mlp.*bias", {"type": "zero"}],
    [".*final_mlp_linear.*weight", {"type": "xavier_uniform"}],
    [".*final_mlp_linear.*bias", {"type": "zero"}],
    [".*weight_ih.*", {"type": "xavier_uniform"}],
    [".*weight_hh.*", {"type": "orthogonal"}],
    [".*bias_ih.*", {"type": "zero"}],
    [".*bias_hh.*", {"type": "lstm_hidden_bias"}]
    ]
  },
  "trainer": {
    "optimizer": {
        "type": "adam",
        "lr": 0.0002,
        "weight_decay": 0.0001
    },
    "validation_metric": "+accuracy",
    "num_serialized_models_to_keep": 2,
    "num_epochs": 35,
    "grad_norm": 1.0,
    "patience": 3,
    "cuda_device": 0,

    "lambda_answer_feat": 0.7,

    "lambda_obj_VCR": 1,
    "lambda_img_VCR": 0.5,
    "margin_obj_VCR": 0.3,
    "margin_img_VCR": 0.3,
    "beta_obj_VCR": 0.05,

    "lambda_obj_feat": 0.05,
    "lambda_img_feat": 0.2,
    "obj_feat_temp": 0.2,
    "img_feat_temp": 0.2,

    "neg_feature_num": 1,
    "sample_num": 3,
    "img_level": true,


    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.2,
      "mode": "max",
      "patience": 1,
      "verbose": true,
      "cooldown": 2
    }
  }
}
